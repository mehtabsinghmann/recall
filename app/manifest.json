{
    "name": "__MSG_appName__",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Recall",
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "all_frames": false,
            "js": [
                "js/immutable.js",
                "js/content.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle"
        }
    ],
    "omnibox": {
        "keyword": "recall"
    },
    "optional_permissions": [
        "history",
        "management"
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "128": "icons/icon.png"
    }
}